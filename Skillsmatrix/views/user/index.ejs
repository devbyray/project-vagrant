<div class="row">

	<div class="col-md-12">
		<article>
			<h1>Users</h1>


			<div ng-app="userApp">
			    <div class="container" ng-controller="UserController" ng-cloak>

				    <div class="search_users">
				      <strong>Search user:</strong>
				      <input type="search" data-ng-model="searchUser" class="form-control" />
<!-- 				     <select ng-model="query.cloth">
				        <option value="">All clothes</option>
				        <option ng-repeat="cloth in clothes" value="{{cloth.name}}">{{cloth.name}}</option>
				      </select>
 -->				</div>
					<table class="table">
						<thead>
							<tr>
								<th></th>
								<th>ID</th>
								<th>Name</th>
								<th>Title</th>
								<th>Email</th>
								<th>Rights</th>
								<th></th>
								<th></th>
								<th></th>
							</tr>
						</thead>
						<tbody>
							<tr data-id="{{user.id}}" data-model="user" ng-repeat="user in users | filter:searchUser"> 
		 						<td ng-switch on="user">
		 							<div id="table_user_status" class="online" ng-if="user.online == true">
		 								<span class="entypo-star green"></span>
									</div>
		 							<div id="table_user_status" class="offline" ng-if="user.online != true">
		 								<span class="entypo-star-empty red"></span>
									</div>
		 						</td>
		 						<td>{{user.id}}</td>
								<td><a href="/user/show/{{user.id}}">{{user.name}}</a></td>
								<td>{{user.title}}</td>
								<td>{{user.email}}</td>
								<td>
									<span ng-if="user.admin == true">
										Admin
									</span>
									<span ng-if="user.manager == true">
										Manager
									</span>
									<span ng-if="user.admin == false || user.manager == false">
										Employee
									</span>
								</td>
								<td><a href="/user/show/{{user.id}}" class="btn btn-sm btn-primary">Show</a></td>
								<td><a href="/user/edit/{{user.id}}" class="btn btn-sm btn-warning">Edit</a></td>
								<td>
									<form action="{{userActionUrl +'destroy/user.id'}}" method="POST">
										<input type="hidden" name="_method" value="delete">
										<input type="submit" class="btn btn-sm btn-danger" value="Delete">
										<input type="hidden" name="_csrf" value="<%= _csrf %>">
									</form>
								</td>
							</tr>
						</tbody>
					</table>
			    </div>
			</div>
		</article>
	</div>	
</div>


<div class="wrapper" id="user_index_page">

	<div class="col-md-12">
		<article>
			<h1>Users</h1>


			<div ng-app="userApp">
			    <div ng-controller="UserController" ng-cloak>

				    <div class="search_users">
				      <strong>Search user:</strong>
				      <input type="search" data-ng-model="searchUser" class="form-control" />
				      <div class="form_buttons">
					      <a href="/user/new/" class="btn btn-sm btn-primary">Create new user</a>
					  </div>
					</div>
					<table class="table">
						<thead>
							<tr>
								<th></th>
								<th>Name</th>
								<th>Title</th>
								<th>Rights</th>
								<th></th>
							</tr>
						</thead>
						<tbody>
							<tr data-id="{{user.id}}" data-model="user" ng-repeat="user in users | filter:searchUser"> 
		 						<td ng-switch on="user">
		 							<div id="table_user_status" class="online" ng-if="user.online == true">
		 								<span class="entypo-star green"></span>
									</div>
		 							<div id="table_user_status" class="offline" ng-if="user.online != true">
		 								<span class="entypo-star-empty red"></span>
									</div>
		 						</td>
								<td><a href="/user/show/{{user.id}}">{{user.name}}</a></td>
								<td>{{user.title}}</td>
								<td>
									<span ng-if="user.admin == true">
										Admin
									</span>
									<span ng-if="user.manager == true">
										Manager
									</span>
									<span ng-if="user.admin == false || user.manager == false">
										Employee
									</span>
								</td>
								<td>
									<a href="/user/show/{{user.id}}" class="btn btn-medium btn-primary">Show</a>
									<a href="/user/edit/{{user.id}}" class="btn btn-medium btn-warning">Edit</a>
									<a href="/user/delete/{{user.id}}" class="btn btn-medium btn-danger">Delete</a>
								</td>
							</tr>
						</tbody>
					</table>
			    </div>
			</div>
		</article>
	</div>	
</div>


<div class="wrapper" id="user_show_page">

	<div class="col-md-12">
		<article id="profile-page">
			<h1>Profile</h1>
			<hr />
			<h2><%= user.name %> <%= user.familyname %></h2>
			<div class="profile_pic">
				<img src="<%= user.profileUrl %>" alt="Profile pic of <%= user.name %> <%= user.familyname %>" />
			</div>
			<p class="show_user_rights_icon">
				<strong>Rights: </strong>
				<% if(user.admin) { %>
					Admin
				<% } else if(user.manager) { %>
					Manager
				<% } else { %>
					Employee
				<% } %>
			</p>
			<p><strong>E-mail:</strong> <%= user.email %></p>
			<p><strong>Title:</strong> <%= user.title %></p>
			<p><strong>Birthday:</strong> <%= user.birthday %></p>
			<p><strong>Address:</strong> <%= user.address %></p>
			<p><strong>Postal:</strong> <%= user.postal %></p>
			<p><strong>City:</strong> <%= user.city %></p>
			<p><strong>Country:</strong> <%= user.country %></p>
			<p><strong>Phone:</strong> <%= user.phone %></p>

			<a href="/user/edit/<%= user.id %>" class="btn btn-medium btn-primary">Edit</a>
		</article>
	</div>	

</div>